<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style
        name="MaterialButtonStyle"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="strokeColor">@color/color_states_materialbutton</item>
        <item name="android:textColor">@color/color_states_materialbutton</item>
    </style>

    <style
        name="MaterialSliderStyle"
        parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/color_states_trackactive</item>
        <item name="trackColorActive">@color/color_states_trackactive</item>
        <item name="trackColorInactive">@color/color_states_trackinactive</item>
    </style>

</resources>